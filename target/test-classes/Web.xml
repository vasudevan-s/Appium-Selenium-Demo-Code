<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<!-- Created By: Vasudevan Sampath -->

<suite name="App Suite" parallel="false" thread-count="1" verbose="10" >

    <listeners>
        <listener class-name="pro.vasudevan.listeners.SuiteListener"/>
        <listener class-name="pro.vasudevan.listeners.TestListener"/>
    </listeners>

    <listeners>
        <listener class-name="pro.vasudevan.listeners.SuiteListener"/>
        <listener class-name="pro.vasudevan.listeners.TestListener"/>
    </listeners>

    <test name="Smoke-Edge" enabled="true">
        <parameter name="browserName" value="msedge"/>
        <parameter name="launchURL" value="http://www.apple.com"/>
        <classes>
            <class name="com.saucelabs.mydemoapp.suites.smoke.WebTests"/>
        </classes>
    </test>

    <test name="Regression" enabled="false">
        <parameter name="browserName" value="firefox"/>
        <parameter name="launchURL" value="http://www.apple.com"/>
        <classes>
            <class name="com.saucelabs.mydemoapp.suites.smoke.WebTests"/>
        </classes>
    </test>
</suite>